<project>
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.github.sirblobman.combatlogx.expansion.compatibility</groupId>
        <artifactId>compatibility-parent</artifactId>
        <version>11.0.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>Towny</artifactId>
    <name>Compatibility Expansion: Towny</name>
    <description>An expansion for CombatLogX that detects non-pvp areas from the Towny plugin.</description>

    <repositories>
        <!-- JitPack Repository -->
        <repository>
            <id>jitpack</id>
            <url>https://jitpack.io/</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <dependencies>
        <!-- Towny Advanced -->
        <dependency>
            <groupId>com.github.TownyAdvanced</groupId>
            <artifactId>Towny</artifactId>
            <version>0.97.2.7</version>
            <scope>provided</scope>
        </dependency>

        <!-- FlagWar -->
        <dependency>
            <groupId>com.github.TownyAdvanced</groupId>
            <artifactId>FlagWar</artifactId>
            <version>0.2.0-devel</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>Towny Compatibility</finalName>
    </build>
</project>
